    <script type="text/javascript" src="https://code.jquery.com/jquery-3.4.1.js"></script>
    <script type="text/javascript">
        $(".show-warp").each(function(){
            var cli = $(this).find(".shop-item");//保存需要的节点
            var width = cli.width();
            var height = cli.height();
            var length = cli.length;
            var col = Math.ceil(length/6);
            $(this).width(width*col);

            cli.each(function(i){
                var x = Math.floor(i/6);
                var y = i%6;

                $(this) .css({
                    left: x*width + "px",
                    top: y*height + "px"
                });
            });

        });
        
    </script>
    
